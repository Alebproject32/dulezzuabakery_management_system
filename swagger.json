      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "example": "Alejandro"
        },
        "lastName": {
          "type": "string",
          "example": "Perez"
        },
        "email": {
          "type": "string",
          "example": "alejandro@bakery.com"
        },
        "staffRole": {
          "type": "string",
          "example": "Pastry Chef"
        },
        "hireDate": {
          "type": "string",
          "example": "2026-01-15"
        },
        "salaryPerMonth": {
          "type": "number",
          "example": 2500
        },
        "phoneNumber": {
          "type": "string",
          "example": "+58-428-555-0123"
