    "Order": {
      "type": "object",
      "properties": {
        "customerName": {
          "type": "string",
          "example": "Juan Perez"
        },
        "customerEmail": {
          "type": "string",
          "example": "juan@example.com"
        },
        "deliveryDate": {
          "type": "string",
          "example": "2026-02-15"
        },
        "totalAmount": {
          "type": "number",
          "example": 25
        },
        "orderStatus": {
          "type": "string",
          "example": "Pending"
        },
        "paymentMethod": {
          "type": "string",
          "example": "Credit Card"
        },
        "article": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "articleId": {
                "type": "string",
                "example": "Article_ID"
              },
              "quantity": {
                "type": "number",
                "example": 2
              }
            }
          }
        },
        "notes": {
          "type": "string",
          "example": "Deliver in the afternoon"
        }
      }
    },
    "Supply": {
      "type": "object",
      "properties": {
        "itemName": {
          "type": "string",
          "example": "Cake Molds"
        },
        "usage": {
          "type": "string",
          "example": "Baking"
        },
        "quantity": {
          "type": "number",
          "example": 10
        },
        "unit": {
          "type": "string",
          "example": "pieces"
        },
        "supplierName": {
          "type": "string",
          "example": "Bakery Tools Co."
        },
        "lastReorderDate": {
          "type": "string",
          "example": "2026-02-01"
        },
        "isDurable": {
          "type": "boolean",
          "example": true
        }
      }
    },
